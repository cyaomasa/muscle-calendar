<div class="container">
  <div class="row">
    <div class="col-8 col-lg-3 mt-5 mr-5">
      <h4 class="mb-4">ユーザー情報</h4>
      <%= render 'public/users/info', user: current_user %>
    </div>
    <div class="col-8 col-lg-8">
      <h4 class="my-5">トレーニング詳細</h4>
      <div class="row">
        <p class="col-4 col-lg-3 border-bottom"><b>トレーニング名:</b></p>
        <p class="col-4 col-lg-3 border-bottom"><%= @post_record.training_name %></p>
      </div>
      <div class="row">
        <p class="col-4 col-lg-3 border-bottom"><b>部位:</b></p>
        <p class="col-4 col-lg-3 border-bottom"></p>
      </div>
      <div class="row">
        <p class="col-4 col-lg-3 border-bottom"><b>セット数:</b></p>
        <p class="col-4 col-lg-3 border-bottom"><%= @post_record.set_count %>セット</p>
      </div>
      <div class="row">
        <p class="col-4 col-lg-3 border-bottom"><b>1セット:</b></p>
        <p class="col-4 col-lg-3 border-bottom"><%= @post_record.rep_count %>回/<%= @post_record.weight %>kg</p>
      </div>
      <div class="ml-5 mt-2 pl-5">
        <% if @post_record.user_id == current_user.id %>
          <span class="mr-2"><%= link_to "編集", edit_post_record_path(params[:id]), class: 'btn btn-primary' %></span>
          <span class="ml-2"><%= link_to "削除", post_record_path(params[:id]), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に削除しますか？" %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
