<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h4 class="my-3">ユーザー編集</h4>
    <div class="mt-3">
      <%= render "layouts/errors", obj: @user %>
    </div>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
      <div class="form-group mt-4">
        <b><%= f.label :name, "ユーザー名" %></b>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <b><%= f.label :image, "プロフィール画像" %></b>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <b><%= f.label :favorite_event, "得意種目" %></b>
        <%= f.text_field :favorite_event, class: "form-control favorite_event" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
