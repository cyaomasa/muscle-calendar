<div class="container">
  <h4 class="my-5">＜投稿詳細＞</h4>
  <%= render 'show', post_record: @post_record %>
  <div class="offset-2">
    <span class="ml-5"><%= link_to "投稿削除", admin_post_record_path(params[:id]), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に削除しますか？" %></span>
  </div>
  <div class="my-4">
    <h5 class="mb-4 mt-5">＜コメント＞</h5>
    <div class="comments-index">
    <% @post_record.comments.each do |post_comment| %>
      <div id="comment_<%= post_comment.id %>">
        <table class="mb-3 border-bottom">
          <tr>
            <td><%= post_comment.user.name %>：</td>
            <td><%= post_comment.comment %></td>
          </tr>
          <tr>
            <td>投稿日：</td>
            <td>
              <%= post_comment.created_at.strftime('%Y/%m/%d') %>
              <%= link_to admin_post_record_comment_path(post_comment.post_record, post_comment), method: :delete, remote: true, data: {"turbolinks" => false} do %>
                <i class="fa-regular fa-trash-can"></i>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    <% end %>
    </div>
  </div>
</div>
