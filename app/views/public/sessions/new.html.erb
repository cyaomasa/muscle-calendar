<div class="container">
  <h2 class="mt-2 py-3">ログイン</h2>
  <h5 class="mt-2 py-3">すでに会員の方はこちらから</h5>

  <%= form_with model: @user, url: user_session_path do |f| %>
  <div class="col mb-3">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@sample.com" %>
  </div>

  <div class="col mb-3">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "000000" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="col mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="col mb-3">
    <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
  <% end %>
  
  <h5 class="mt-5">ゲストログインはこちらから</h5>
  <div class="col mb-3 mt-3">
    <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary", method: :post %>
  </div>
</div>
