$('#commentWrapper').append(`
  <div id="comment_<%= @comment.id %>">
    <table class="mb-3 border-bottom">
      <tr>
        <td>
        <%= link_to user_path(@comment.user_id) do %>
          <%= @comment.user.name %>：
        <% end %>
        </td>
        <td><%= @comment.comment %></td>
      </tr>
      <tr>
        <td>投稿日：</td>
        <td>
          <%= @comment.created_at.strftime('%Y/%m/%d') %>
          <% if @comment.user == current_user %>
            <%= link_to post_record_comment_path(@comment.post_record, @comment), method: :delete, remote: true, data: {"turbolinks" => false} do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
`);
$("textarea").val('');
