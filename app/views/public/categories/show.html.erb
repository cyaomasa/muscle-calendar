<div class="container">
  <div class="row">
    <div class="col-8 col-lg-3 mt-5 mr-5">
      <h4 class="mb-4">ユーザー情報</h4>
      <%= render 'public/users/info', user: current_user %>
    </div>
    <div class="col-8">
      <h4 class="my-5"><%= @category.name %>のトレーニング一覧</h4>
      <div>
        <span class="mt-2">（全<%= @post_records.count %>件）</span>
        <%= render 'public/post_records/index', post_records: @post_records %>
      </div>
    </div>
  </div>
</div>
