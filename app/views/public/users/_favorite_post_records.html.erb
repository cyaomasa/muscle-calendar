<table class="table mt-4 text-center">
  <% if favorite_post_records.present? %>
  <thead>
    <tr>
      <th>トレーニング日</th>
      <th>投稿者名</th>
      <th>部位</th>
      <th>トレーニング名</th>
      <th>いいね数</th>
    </tr>
  </thead>
  <tbody>
  <% favorite_post_records.each do |post_record| %>
    <tr>
      <td>
        <%= post_record.start_time.strftime('%Y/%m/%d') %>
      </td>
      <td>
        <%= post_record.user.name %>
      </td>
      <td>
        <%= post_record.category.name %>
      </td>
      <td>
      <%= link_to post_record_path(post_record.id) do %>
        <%= post_record.training_name %>
      <% end %>
      </td>
      <td>
        <i class="fas fa-heart fa-lg" aria-hidden="true" style="color: red;"></i>
        <%= post_record.favorites.count %>
      </td>
    </tr>
  <% end %>
  </tbody>
  <% else %>
    <h5>"いいねをした投稿がありません"</h5>
  <% end %>
</table>
