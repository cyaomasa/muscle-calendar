<div class="container">
  <h4 class="my-5">トレーニング詳細</h4>
  <div class="row">
    <p class="col-4 col-lg-2 border-bottom"><b>トレーニング名:</b></p>
    <p class="col-4 col-lg-2 border-bottom"><%= @post_record.training_name %></p>
  </div>
  <div class="row">
    <p class="col-4 col-lg-2 border-bottom"><b>部位:</b></p>
    <p class="col-4 col-lg-2 border-bottom"></p>
  </div>
  <div class="row">
    <p class="col-4 col-lg-2 border-bottom"><b>セット数:</b></p>
    <p class="col-4 col-lg-2 border-bottom"><%= @post_record.set_count %>セット</p>
  </div>
  <div class="row">
    <p class="col-4 col-lg-2 border-bottom"><b>1セット:</b></p>
    <p class="col-4 col-lg-2 border-bottom"><%= @post_record.rep_count %>回/<%= @post_record.weight %>kg</p>
  </div>
  <div class="ml-5 mt-2 pl-5">
    <%= link_to "編集", edit_post_record_path(params[:id]), class: 'btn btn-primary' %>
  </div>
</div>
