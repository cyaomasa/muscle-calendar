<%= form_with model: [post_record, comment], local: false do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_area :comment, rows: '2', style: "width:100%", placeholder: "コメントをここに" %>
    </div>
    <br>
    <div class="field is-grouped">
      <div class="control">
        <%= f.submit 'コメントする', class:"btn btn-primary" %>
      </div>
    </div>
<% end %>
