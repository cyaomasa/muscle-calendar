<div class="container">
  <h4 class="mt-5">＜カテゴリ一覧・追加＞</h4>
  <div class="mt-3">
    <%= render "layouts/errors", obj: @category %>
  </div>
  <table class="row my-5 ml-1">
  <%= form_with model: @category, url: admin_categories_path, method: :post do |f| %>
    <tr>
      <td class="pr-3"><b><%= f.label "カテゴリ名" %></b></td>
      <td class="pr-3"><%= f.text_field :name %></td>
      <td class="pr-4"><%= f.submit "新規登録", class: "btn btn-primary" %></td>
    </tr>
  <% end %>
  </table>
  <table class="table text-center">
    <tr class="row">
      <th class="col-4 col-lg-2">カテゴリ名</th>
      <th class="col-3 col-lg-1"></th>
      <th class="col-3 col-lg-1"></th>
    </tr>
    <% @categories.each do |category| %>
    <tr class="row">
      <td class="col-4 col-lg-2"><%= category.name %></td>
      <td class="col-3 col-lg-1"><%= link_to "編集", edit_admin_category_path(category.id), class: "btn btn-success" %></td>
      <td class="col-3 col-lg-1"><%= link_to "削除", admin_category_path(category.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  <% end %>
  </table>
</div>